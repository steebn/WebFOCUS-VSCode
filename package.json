{
    "name": "webfocus",
    "displayName": "WebFOCUS",
    "description": "Provides language support for WebFOCUS",
    "version": "0.6.2",
    "preview": true,
    "publisher": "steebn",
    "author": {
        "name": "Steven Hall",
        "url": "https://github.com/steebn"
    },
    "license": "MIT",
    "icon": "images/website_dashboard.png",
    "galleryBanner": {
        "color": "#24292e",
        "theme": "dark"
    },
    "homepage": "https://github.com/steebn/WebFOCUS-VSCode",
    "repository": {
        "type": "git",
        "url": "https://github.com/steebn/WebFOCUS-VSCode.git"
    },
    "bugs": {
        "url": "https://github.com/steebn/WebFOCUS-VSCode/issues"
    },
    "engines": {
        "vscode": "^1.27.0"
    },
    "categories": [
        "Programming Languages",
        "Formatters",
        "Snippets",
        "Other"
    ],
    "keywords": [
        "FOCUS",
        "WebFOCUS",
        "snippet",
        "fex",
        "focexec"
    ],
    "activationEvents": [
        "*"
    ],
    "extensionDependencies": [
        "vscode.git"
    ],
    "main": "./extension",
    "contributes": {
        "languages": [
            {
                "id": "focexec",
                "aliases": [
                    "FOCUS Executable",
                    "WebFOCUS"
                ],
                "extensions": [
                    ".fex"
                ],
                "configuration": "./languages/focexec.json"
            },
            {
                "id": "master",
                "aliases": [
                    "Master File"
                ],
                "extensions": [
                    ".mas"
                ],
                "configuration": "./languages/master.json"
            },
            {
                "id": "access",
                "aliases": [
                    "Access File"
                ],
                "extensions": [
                    ".acx"
                ],
                "configuration": "./languages/access.json"
            },
            {
                "id": "stylesheet",
                "aliases": [
                    "Stylesheet"
                ],
                "extensions": [
                    ".sty"
                ],
                "configuration": "./languages/stylesheet.json"
            }
        ],
        "snippets": [
            {
                "language": "focexec",
                "path": "./snippets/focexec.json"
            }
        ],
        "grammars": [
            {
                "language": "focexec",
                "scopeName": "source.fex",
                "path": "./syntaxes/focexec.tmLanguage.json"
            },
            {
                "language": "master",
                "scopeName": "source.mas",
                "path": "./syntaxes/master.tmLanguage.json"
            },
            {
                "language": "access",
                "scopeName": "source.acx",
                "path": "./syntaxes/access.tmLanguage.json"
            },
            {
                "language": "stylesheet",
                "scopeName": "source.sty",
                "path": "./syntaxes/stylesheet.tmLanguage.json"
            }
        ],
        "keybindings": [
            {
                "key": "ctrl+alt+u",
                "command": "editor.action.transformToUppercase"
            },
            {
                "key": "ctrl+alt+l",
                "command": "editor.action.transformToLowercase"
            }
        ],
        "configurationDefaults": {
            "[focexec]": {
                "editor.wordSeparators": "`~!@#%^*()-=+[{]}\\|;:'\",.<>/?"
            },
            "[master]": {
                "editor.wordSeparators": "`~!@#%^*()-=+[{]}\\|;:'\",.<>/?"
            },
            "[access]": {
                "editor.wordSeparators": "`~!@#%^*()-=+[{]}\\|;:'\",.<>/?"
            },
            "[stylesheet]": {
                "editor.wordSeparators": "`~!@#%^*()-=+[{]}\\|;:'\",.<>/?"
            }
        }
    },
    "scripts": {
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test",
        "vscode:prepublish": "webpack --mode production",
        "webpack": "webpack --mode development",
        "webpack-dev": "webpack --mode development --watch",
        "test-compile": "tsc -p ./"
    },
    "devDependencies": {
        "@types/mocha": "^5.2.7",
        "@types/node": "^13.7.0",
        "eslint": "^6.8.0",
        "ts-loader": "^6.2.1",
        "typescript": "^3.7.5",
        "vscode": "^1.1.36",
        "webpack": "^4.41.5",
        "webpack-cli": "^3.3.12"
    },
    "dependencies": {
        "mem": "^6.0.1",
        "npm": "^6.13.7"
    }
}
